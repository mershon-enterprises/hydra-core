<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet id="9" author="Kevin Mershon">
        <comment>Create the data set table</comment>
        <createTable schemaName="public" tableName="data_set">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="date_created" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="deleted" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <comment>Create the attachment table</comment>
        <createTable schemaName="public" tableName="data_set_attachment">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="date_created" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="description" type="character varying(255)">
                <constraints nullable="false" />
            </column>
            <column name="value" type="blob">
                <constraints nullable="false" />
            </column>
            <column name="deleted" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="data_set_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="data_set_id"
            baseTableName="data_set"
            constraintName="fk_attachment_to_data_set"
            deferrable="false"
            initiallyDeferred="false"
            onDelete="CASCADE"
            onUpdate="RESTRICT"
            referencedColumnNames="id"
            referencedTableName="data_set" />
    </changeSet>

</databaseChangeLog>

