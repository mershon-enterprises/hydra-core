<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet id="1" author="Kevin Mershon">
        <comment>Create the user table</comment>
        <createTable schemaName="public" tableName="user">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="date_created" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="date_modified" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="email_address" type="character varying(255)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>

        <comment>Create the user session table</comment>
        <createTable schemaName="public" tableName="user_session">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="date_created" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="date_modified" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="start_date" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="end_date" type="timestamp with time zone">
                <constraints nullable="true" />
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="user_id"
            baseTableName="user"
            constraintName="fk_session_to_user"
            deferrable="false"
            initiallyDeferred="false"
            onDelete="CASCADE"
            onUpdate="RESTRICT"
            referencedColumnNames="id"
            referencedTableName="user" />

        <comment>Create the user session detail table</comment>
        <createTable schemaName="public" tableName="user_session_detail">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="date_created" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="date_modified" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="character varying(255)">
                <constraints nullable="false" />
            </column>
            <column name="value" type="character varying(255)">
                <constraints nullable="false" />
            </column>
            <column name="session_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="session_id"
            baseTableName="user"
            constraintName="fk_detail_to_session"
            deferrable="false"
            initiallyDeferred="false"
            onDelete="CASCADE"
            onUpdate="RESTRICT"
            referencedColumnNames="id"
            referencedTableName="user_session" />

    </changeSet>

</databaseChangeLog>
